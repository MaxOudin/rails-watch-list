<div class="container mt-5">
  <div class="cards d-flex justify-content-center">
    <% if @list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url('<%= cl_image_path @list.photo.key, height: 400, width: 300, crop: :fill %>')">
        <h2 class="titre text-center text-light mb-4"><%= @list.name.upcase %></h2>
      </div>
    <% end %>
  </div>
  <div class="text-center mt-3">
    <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
</div>


<div class="container mb-3 mt-4">

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col">
      <div class="card h-100">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Comments: <%= bookmark.comment %></li>
          <li class="list-group-item">Average rate: <%= bookmark.movie.rating %></li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>
</div>
